@model GroupMasterModel

@using LaundaryManagement.Models
@{
    ViewBag.Title = "Edit";
}
@using (Html.BeginForm())
{
   
        <table>
            <tr>
                <td>
                    @Html.ActionLink("Back to List", "List")
                </td>
            </tr>
            <tr>
                <td>
                    <label for="example-text">Name</label>
                </td>
                <td>
                    @Html.TextBoxFor(model => model.GroupName)
                </td>
            </tr>
            <tr>
                <td>
                    <label>Code</label>
                </td>
                <td>
                    @Html.TextBoxFor(model => model.GroupCode)
                </td>
            </tr>
            <tr>
                <td>
                    <label>Status</label>
                </td>
                <td>
                    <select name="drpGroupStatus" id="drpGroupStatus" class="form-control" required>
                        <option value="">--Select Group Status--</option>
                        <option value="1">Active</option>
                        <option value="2">InActive</option>
                    </select>
                </td>
            </tr>
            <tr>
                <td>
                    <label>Color Code</label>
                </td>
                <td>
                    @Html.TextBoxFor(model => model.ColorCode)
                </td>
            </tr>
            <tr>
                @*<td>
                    <input type="submit" name="submit" value="Update" onclick="Validate();" />
                </td>*@

            </tr>
        </table>
    
   

}
